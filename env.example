# Server Configuration
PORT=3000
NODE_ENV=development

# Admin Configuration
ADMIN_EMAIL=admin@cogni-sphere.com
ADMIN_TOKEN=your-secure-admin-token-here

# Email Configuration (SMTP)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=admin@cogni-sphere.com
SMTP_PASS=your-smtp-password

# Meeting Platform Configuration
MEETING_BASE_URL=https://meet.google.com

# Database Configuration
DB_PATH=./data/cognisphere.db

# Security
JWT_SECRET=your-jwt-secret-key-here
SESSION_SECRET=your-session-secret-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://cogni-sphere.com,https://www.cogni-sphere.com 